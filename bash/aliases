# Finder
alias o="open ."

# Move
alias l="ls -la"       # List in long format, include dotfiles
alias ld="ls -ld */"   # List in long format, only directories
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Recursively remove .DS_Store files
alias cleanupds="find . -type f -name '*.DS_Store' -ls -delete"

#Monitoring
alias tu='top -o cpu' # process cpu

#git 
alias gs='git status'
alias gb='git branch'
alias gdh='git diff HEAD'

alias gaa='git add .'
alias ga='git add $1'

alias gc='git commit'
alias gca='git commit --amend --no-edit'

alias gst='git stash'
alias gsp='git stash pop'

alias gnb='git nb' # new branch aka checkout -b

alias gls='git log --graph --decorate --pretty=oneline --abbrev-commit'
alias glg='git log --graph --oneline --decorate --all'
alias gld='git log --pretty=format:"%h %ad %s" --date=short --all'

alias gpl='git pull'
alias gps='git push'

alias gc2='git diff HEAD~1..HEAD' # compare last commit with the previous
alias grm='git rm $1'
alias grh='git reset --hard'
alias grlc='git reset --hard HEAD~1' # delete last commit


#reload
alias reload='source ~/.zshrc'



