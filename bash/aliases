# Finder
alias o="open ."

# Move
alias l="ls -la"       # List in long format, include dotfiles
alias ld="ls -ld */"   # List in long format, only directories
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Recursively remove .DS_Store files
alias cleanupds="find . -type f -name '*.DS_Store' -ls -delete"

#Monitoring
alias tu='top -o cpu' # process cpu

#git 
alias gs='git status'
alias gb='git branch'
alias gnb='git nb' # new branch aka checkout -b

#git diff 
alias gdh='git diff HEAD'
alias gdc='git diff --cached'
alias gd2c='git diff HEAD~1..HEAD' # compare last commit with the previous

#git checkout
alias gchl='git checkout -'
alias gch='git checkout $1'

#git add
alias gaa='git add .'
alias ga='git add $1'

#git commit
alias gcoma='git commit --amend --no-edit'

function gcom {
    message="$1"
    git commit -m "$message"
}

#git stash
alias gst='git stash'
alias gsp='git stash pop'

#git tree
alias gls='git log --graph --decorate --pretty=oneline --abbrev-commit'
alias glg='git log --graph --oneline --decorate --all'
alias gld='git log --pretty=format:"%h %ad %s" --date=short --all'

#git pull & push
alias gpl='git pull'
alias gps='git push'

# git remove & reset
alias grm='git rm $1'
alias grh='git reset --hard'
alias grlc='git reset --hard HEAD~1' # delete last commit

#reload
alias reload='source ~/.zshrc'



