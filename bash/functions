# Create a new directory and enter it
function mk() {
  mkdir -p "$@" && cd "$@"
}

function loadZshBySystem(){
	unameOut="$(uname -s)"
	case "${unameOut}" in
	    Linux*)     machine=Linux;;
	    Darwin*)    machine=Mac;;
	    CYGWIN*)    machine=Cygwin;;
	    MINGW*)     machine=MinGw;;
	    *)          machine="UNKNOWN:${unameOut}"
	esac
	echo I am on ${machine}

	if [ ${machine} =  "Linux" ]
	then
		export ZSH=/home/robert/.oh-my-zsh
	elif [ ${machine} = "Mac" ]
	then
		export ZSH=/Users/szostakowski/.oh-my-zsh
		#adds go to PATH
		export PATH=$PATH:/usr/local/go/bin
		#maps capslock to ESC
		setxkbmap -option caps:escape
	else
		echo Error checking the system
	fi
}
